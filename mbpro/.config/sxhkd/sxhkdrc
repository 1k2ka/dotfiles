XF86AudioPlay
  notify-send "Pointer follows focus: off" &&bspc config pointer_follows_focus false

XF86AudioNext
  notify-send "Pointer follows focus: on" && bspc config pointer_follows_focus true

# keyboard brightness down
XF86KbdBrightnessDown
  light -kU 5

# keyboard brightness up
XF86KbdBrightnessUp
  light -kA 5

# brightness down
XF86MonBrightnessDown
	light -U 5

# brightness up
XF86MonBrightnessUp
	light -A 5

# lock
super + z
	i3lock

# capture area
@XF86LaunchA
	scrot -s -e 'notify-send "File Saved at ~/Pictures/screenshots/$f" && feh $f && mv $f ~/Pictures/screenshots/'

# capture screen
shift + @XF86LaunchA
	scrot -e 'notify-send "File Saved at ~/Pictures/screenshots/$f" && mv $f ~/Pictures/screenshots/'

# drop down terminal
super + shift + Return
	xdotool search --onlyvisible --classname Quake windowunmap \
		|| xdotool search --classname Quake windowmap \
		|| urxvt -name Quake -geometry 120x25+500+1

# pull up terminal
super + ctrl + Return
	xdotool search --onlyvisible --classname Doom windowunmap \
		|| xdotool search --classname Doom windowmap \
		|| urxvt -name Doom -geometry 120x25+500+825

# full height center terminal
super + alt + Return
	xdotool search --onlyvisible --classname Wolfenstein windowunmap \
		|| xdotool search --classname Wolfenstein windowmap \
		|| urxvt -name Wolfenstein -geometry 120x55+500+1

# terminal emulator
super + Return
	urxvt

# volume up
XF86AudioRaiseVolume
  pulseaudio-ctl up 5

# volume down
XF86AudioLowerVolume
  pulseaudio-ctl down 5

# mute audio
XF86AudioMute
  notify-send "Mute toggled" && pulseaudio-ctl mute

# reload sxhkd
super + BackSpace
	pkill -USR1 -x sxhkd

# program launcher
super + space
	rofi -show run

# window controller
super + shift + space
	rofi -show window
#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + BackSpace
	bspc quit

# close and kill
super + {_,shift + }Escape
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

super + f
	bspc node -t fullscreen

# set the window state
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the last node/desktop
super + {Tab,grave}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,p}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '{1-9}'

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + shift + {Left,Down,Up,Right}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# expand the tiled space in the given direction
super + {u,i}
	bspc node {@west -r -10,@east -r +10}

# contract the tiled space in the given direction
super + shift + {u,i}
	bspc node {@east -r -10,@west -r +10}

